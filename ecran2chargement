<body>
    <!-- Éléments décoratifs -->
    <div class="decoration decoration-1"></div>
    <div class="decoration decoration-2"></div>
    <div class="decoration decoration-3"></div>
    
    <!-- Contenu principal -->
    <div class="loading-container">
        <div class="logo">
            <div class="logo-text">Questions pour un Champion</div>
            <div class="subtitle">Préparez-vous à jouer</div>
        </div>
        
        <div class="loading-text">
            Chargement des questions<span class="dots"></span>
        </div>
        
        <div class="percentage" id="percentage">0%</div>
        
        <div class="loading-bar-container">
            <div class="loading-bar" id="loadingBar"></div>
        </div>
        
        <div class="hint pulse">
            Le premier joueur à buzzer pourra répondre à la question
        </div>
    </div>

    <script>
        // Simulation de progression du chargement
        const percentageElement = document.getElementById('percentage');
        const loadingBar = document.getElementById('loadingBar');
        const loadingText = document.querySelector('.loading-text');
        const hints = [
            "Connaissez-vous la capitale de la Norvège ?",
            "Les questions deviennent plus difficiles à chaque tour",
            "La rapidité est aussi importante que la connaissance",
            "Attention aux fausses réponses, elles font perdre des points !"
        ];
        
        let progress = 0;
        let currentHint = 0;
        
        // Mettre à jour le texte d'indication périodiquement
        setInterval(() => {
            currentHint = (currentHint + 1) % hints.length;
            document.querySelector('.hint').textContent = hints[currentHint];
        }, 3000);
        
        // Animation de progression
        const loadingInterval = setInterval(() => {
            progress += Math.random() * 5;
            if (progress > 100) progress = 100;
            
            percentageElement.textContent = Math.floor(progress) + '%';
            loadingBar.style.width = progress + '%';
            
            // Changer le texte en fonction de la progression
            if (progress < 30) {
                loadingText.innerHTML = 'Chargement des questions<span class="dots"></span>';
            } else if (progress < 60) {
                loadingText.innerHTML = 'Préparation des joueurs<span class="dots"></span>';
            } else if (progress < 90) {
                loadingText.innerHTML = 'Initialisation du plateau<span class="dots"></span>';
            } else {
                loadingText.innerHTML = 'Presque prêt<span class="dots"></span>';
            }
            
            if (progress >= 100) {
                clearInterval(loadingInterval);
                setTimeout(() => {
                    // Ici on pourrait rediriger vers l'écran principal du jeu
                    alert("Chargement terminé ! Le jeu va commencer.");
                }, 1000);
            }
        }, 200);
    </script>
</body>
