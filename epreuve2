<body>
    <div class="container">
        <!-- ZONE DE JEU PRINCIPALE -->
        <div class="game-zone">
            <!-- QUESTION AVEC CHRONOMÃˆTRE -->
            <div class="question-section">
                <div class="question">Quelle est la capitale de la France ?</div>
                <div class="timer-container">
                    <div class="timer-label">Chrono</div>
                    <div class="timer" id="timer">45</div>
                </div>
            </div>
            
            <!-- RÃ‰PONSES -->
            <div class="answers-section">
                <!-- Colonne gauche -->
                <div class="answers-column">
                    <button class="answer-btn" data-answer="Paris">Paris</button>
                    <button class="answer-btn" data-answer="GenÃ¨ve">GenÃ¨ve</button>
                </div>
                
                <!-- Colonne droite -->
                <div class="answers-column">
                    <button class="answer-btn" data-answer="Bruxelles">Bruxelles</button>
                    <button class="answer-btn" data-answer="Dakar">Dakar</button>
                </div>
                
                <!-- BOUTON PASSER (SANS BUZZER) -->
                <div class="pass-container">
                    <button class="pass-btn" id="passBtn">PASSER</button>
                </div>
            </div>
        </div>
        
        <!-- ZONE "4 Ã€ LA SUITE" -->
        <div class="streak-zone">
            <div class="streak-title">4 Ã€ LA SUITE</div>
            
            <div class="streak-boxes">
                <div class="streak-box filled">4</div>
                <div class="streak-box filled">3</div>
                <div class="streak-box current">2</div>
                <div class="streak-box">1</div>
            </div>
            
            <div class="streak-counter">
                <div class="counter-number">2/4</div>
                <div class="counter-label">Bonnes rÃ©ponses</div>
            </div>
        </div>
    </div>

    <script>
        // Ã‰LÃ‰MENTS DU DOM
        const questionElement = document.querySelector('.question');
        const answerButtons = document.querySelectorAll('.answer-btn');
        const passBtn = document.getElementById('passBtn');
        const timerElement = document.getElementById('timer');
        const streakBoxes = document.querySelectorAll('.streak-box');
        const counterNumber = document.querySelector('.counter-number');
        
        // Ã‰TAT DU JEU
        let currentStreak = 2;
        let gameActive = false;
        let timeLeft = 45;
        let timerInterval = null;
        let gameStarted = false;
        
        // QUESTIONS
        const questions = [
            {
                question: "Quelle est la capitale de la France ?",
                correct: "Paris",
                answers: ["Paris", "Bruxelles", "GenÃ¨ve", "Dakar"]
            },
            {
                question: "Quelle est la capitale de l'Italie ?",
                correct: "Rome",
                answers: ["Rome", "Milan", "Naples", "Turin"]
            },
            {
                question: "Quelle est la capitale de l'Espagne ?",
                correct: "Madrid",
                answers: ["Madrid", "Barcelone", "SÃ©ville", "Valence"]
            },
            {
                question: "Quelle est la capitale de l'Allemagne ?",
                correct: "Berlin",
                answers: ["Berlin", "Munich", "Hambourg", "Francfort"]
            },
            {
                question: "Quelle est la capitale du Royaume-Uni ?",
                correct: "Londres",
                answers: ["Londres", "Manchester", "Liverpool", "Ã‰dimbourg"]
            },
            {
                question: "Quelle est la capitale du Portugal ?",
                correct: "Lisbonne",
                answers: ["Lisbonne", "Porto", "Coimbra", "Faro"]
            },
            {
                question: "Quelle est la capitale de la Belgique ?",
                correct: "Bruxelles",
                answers: ["Bruxelles", "Anvers", "Gand", "LiÃ¨ge"]
            }
        ];
        
        let currentQuestion = 0;
        
        // INITIALISATION
        function init() {
            updateQuestion();
            updateStreakDisplay();
            disableAnswers();
            resetTimer();
            updatePassButton();
            
            // Activer le jeu dÃ¨s le dÃ©but
            startGame();
        }
        
        // DÃ‰MARRER LA MANCHE (CHRONO DÃ‰MARRÃ‰)
        function startGame() {
            if (gameStarted) return;
            
            gameStarted = true;
            gameActive = true;
            enableAnswers();
            startTimer();
        }
        
        // METTRE Ã€ JOUR LA QUESTION
        function updateQuestion() {
            const q = questions[currentQuestion];
            questionElement.textContent = q.question;
            
            answerButtons.forEach((btn, index) => {
                btn.textContent = q.answers[index];
                btn.dataset.answer = q.answers[index];
                btn.disabled = !gameActive;
                btn.style.background = '#F8D54B';
                btn.style.color = '#012A6D';
                btn.style.opacity = '1';
            });
            
            updatePassButton();
        }
        
        // METTRE Ã€ JOUR L'AFFICHAGE DE LA SÃ‰RIE
        function updateStreakDisplay() {
            streakBoxes.forEach((box, index) => {
                const boxNum = 4 - index;
                box.classList.remove('filled', 'current');
                
                if (boxNum < currentStreak) {
                    box.classList.add('filled');
                } else if (boxNum === currentStreak) {
                    box.classList.add('current');
                }
            });
            
            counterNumber.textContent = `${currentStreak}/4`;
            
            // VICTOIRE
            if (currentStreak >= 4) {
                clearTimer();
                gameActive = false;
                setTimeout(() => {
                    alert('ðŸŽ‰ VICTOIRE ! Vous avez rÃ©ussi 4 rÃ©ponses Ã  la suite !');
                    resetGame();
                }, 500);
            }
        }
        
        // CHRONOMÃˆTRE (DÃ‰MARRE DÃˆS LE DÃ‰BUT DE LA MANCHE)
        function startTimer() {
            if (timerInterval) return;
            
            timeLeft = 45;
            timerElement.textContent = timeLeft;
            timerElement.classList.remove('warning', 'danger');
            
            timerInterval = setInterval(() => {
                timeLeft--;
                timerElement.textContent = timeLeft;
                
                // Changements visuels selon le temps restant
                if (timeLeft <= 10) {
                    timerElement.classList.add('danger');
                    timerElement.classList.remove('warning');
                } else if (timeLeft <= 20) {
                    timerElement.classList.add('warning');
                    timerElement.classList.remove('danger');
                }
                
                // Fin du temps
                if (timeLeft <= 0) {
                    handleTimeOut();
                }
            }, 1000);
        }
        
        function clearTimer() {
            clearInterval(timerInterval);
            timerInterval = null;
        }
        
        function resetTimer() {
            clearTimer();
            timeLeft = 45;
            timerElement.textContent = timeLeft;
            timerElement.classList.remove('warning', 'danger');
        }
        
        function handleTimeOut() {
            clearTimer();
            gameActive = false;
            
            // DÃ©sactiver toutes les rÃ©ponses
            answerButtons.forEach(btn => {
                btn.disabled = true;
            });
            
            // Montrer la bonne rÃ©ponse
            const correct = questions[currentQuestion].correct;
            answerButtons.forEach(b => {
                if (b.dataset.answer === correct) {
                    b.style.background = '#33cc33';
                    b.style.color = 'white';
                }
            });
            
            // Fin de la manche
            setTimeout(() => {
                alert('â° TEMPS Ã‰COULÃ‰ ! La manche est terminÃ©e.');
                resetGame();
            }, 1500);
        }
        
        // METTRE Ã€ JOUR LE BOUTON PASSER
        function updatePassButton() {
            passBtn.disabled = !gameActive;
        }
        
        // DÃ‰SACTIVER LES RÃ‰PONSES
        function disableAnswers() {
            answerButtons.forEach(btn => {
                btn.disabled = true;
            });
            gameActive = false;
            updatePassButton();
        }
        
        // ACTIVER LES RÃ‰PONSES
        function enableAnswers() {
            answerButtons.forEach(btn => {
                btn.disabled = false;
            });
            gameActive = true;
            updatePassButton();
        }
        
        // RÃ‰INITIALISER LE JEU
        function resetGame() {
            currentStreak = 0;
            currentQuestion = 0;
            gameStarted = false;
            updateQuestion();
            updateStreakDisplay();
            disableAnswers();
            resetTimer();
            
            // RedÃ©marrer automatiquement aprÃ¨s 2 secondes
            setTimeout(() => {
                startGame();
            }, 2000);
        }
        
        // GESTION DU BOUTON PASSER
        passBtn.addEventListener('click', function() {
            if (!gameActive) return;
            
            // DÃ©sactiver les rÃ©ponses pendant l'animation
            answerButtons.forEach(btn => {
                btn.disabled = true;
            });
            
            // RÃ©initialiser la sÃ©rie (passer casse la sÃ©rie)
            currentStreak = 0;
            
            // Passer Ã  la question suivante
            setTimeout(() => {
                currentQuestion = (currentQuestion + 1) % questions.length;
                updateQuestion();
                updateStreakDisplay();
                enableAnswers();
            }, 500);
        });
        
        // GESTION DES RÃ‰PONSES
        answerButtons.forEach(btn => {
            btn.addEventListener('click', function() {
                if (!gameActive) return;
                
                const selected = this.dataset.answer;
                const correct = questions[currentQuestion].correct;
                
                // DÃ‰SACTIVER TOUS LES BOUTONS PENDANT L'ANIMATION
                answerButtons.forEach(b => {
                    b.disabled = true;
                });
                
                // AFFICHER LA RÃ‰PONSE
                if (selected === correct) {
                    // BONNE RÃ‰PONSE
                    this.style.background = '#33cc33';
                    this.style.color = 'white';
                    currentStreak++;
                    
                    // PASSER Ã€ LA QUESTION SUIVANTE
                    setTimeout(() => {
                        currentQuestion = (currentQuestion + 1) % questions.length;
                        updateQuestion();
                        updateStreakDisplay();
                        enableAnswers();
                    }, 1500);
                } else {
                    // MAUVAISE RÃ‰PONSE
                    this.style.background = '#cc0000';
                    this.style.color = 'white';
                    
                    // MONTRER LA BONNE RÃ‰PONSE
                    answerButtons.forEach(b => {
                        if (b.dataset.answer === correct) {
                            b.style.background = '#33cc33';
                            b.style.color = 'white';
                        }
                    });
                    
                    // RÃ‰INITIALISER LA SÃ‰RIE
                    setTimeout(() => {
                        currentStreak = 0;
                        updateStreakDisplay();
                        enableAnswers();
                    }, 2000);
                }
            });
        });
        
        // DÃ‰MARRER LE JEU
        init();
    </script>
</body>
</html>
